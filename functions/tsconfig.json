{
  "compilerOptions": {
    "module": "commonjs",
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "outDir": "lib",
    "sourceMap": true,
    "strict": true,
    "target": "es2017",
    "esModuleInterop": true,    // Ensures compatibility with ES6 modules
    "moduleResolution": "node", // Correctly resolve modules like a Node.js app
    "allowSyntheticDefaultImports": true // Allow default imports from modules with no default export
  },
  "compileOnSave": true,
  "include": ["src"]
}
